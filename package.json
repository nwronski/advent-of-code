{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "Advent of Code 2020",
  "repository": "git@github.com:nwronski/advent-of-code.git",
  "author": {
    "name": "Nicholas Wronski",
    "url": "https://github.com/nwronski"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "lint": "eslint --fix \"./src/**/*.ts\""
  },
  "eslintConfig": {
    "extends": "plugin:nwronski/base",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "rules": {
      "@typescript-eslint/no-magic-numbers": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "complexity": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "latest",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-nwronski": "^3.1.1",
    "ts-node": "^9.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  }
}
